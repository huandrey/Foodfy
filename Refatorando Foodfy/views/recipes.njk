{% extends "layout.njk" %}

{% block content %}

<section>

<div id="cards" class="recipes">

    {% for recipe in recipes %}
        <a href="/recipe/{{loop.index}}">
            <div class="card">
                <div>
                    <img src="{{recipe.image}}" alt=""></div>
                <div>
                    <h4>{{recipe.title}}</h4>
                    <p>{{recipe.author}}</p>
                </div>
            </div>
        </a>
    {% endfor %}   
</div>

</section>

<footer class="recipes-footer">Todos direitos reservados, receitas Foodfy</footer>

    
{% endblock content %}
